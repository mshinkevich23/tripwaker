<div class="local">
  <div class="local-panel">
    <h1 class="title">Local</h1>
    <%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
      <div class="row">
        <label class="col-sm-4 col-sm-offset-1">Ready to meet tourists?</label>
        <div class="col-sm-2">
          <%= f.check_box :active_local %>
          <script>
            $(function() {
              $('#user_active_local').bootstrapToggle();
            });
          </script>
        </div>
      </div>
      <br>
      <div class="date-list">
      </div>
      <script type="text/javascript" src="/assets/slider.js"></script>
      <script>
        var arr = ["Mo", "Tu", "Wd", "Th", "Fr", "St", "Su"];
        for (var i = 0; i < arr.length; i++) {
          $(".date-list").append("<div class='time-range'><h5 class='h5'><span class='slider-time_" + i + "'>12:00 AM</span> - <span class='slider-time2_" + i + "'>11:59 PM</span></h5><div id='list' class='row'><div class='col-md-2' style='text-align: right;'><h4 style='margin-top: 2px;'>" + arr[i] + "</h4></div><div class='col-md-9'><div class='sliders_step1'><div class='slider-range_" + i + "'></div></div></div></div></div>");
        }
      </script>

      <%= f.text_field :day0, :class => 'form-control0', :type => 'hidden' %>
      <%= f.text_field :day1, :class => 'form-control1', :type => 'hidden' %>
      <%= f.text_field :day2, :class => 'form-control2', :type => 'hidden' %>
      <%= f.text_field :day3, :class => 'form-control3', :type => 'hidden' %>
      <%= f.text_field :day4, :class => 'form-control4', :type => 'hidden' %>
      <%= f.text_field :day5, :class => 'form-control5', :type => 'hidden' %>
      <%= f.text_field :day6, :class => 'form-control6', :type => 'hidden' %>

      <script>
        var slider_values = [];
        <% (0..6).each do |day| %>
          slider_values[<%= day %>] = [];
          slider_values[<%= day %>][0] = <%= @user["day#{day}"].split(',').first %>;
          slider_values[<%= day %>][1] = <%= @user["day#{day}"].split(',').second %>;
        <% end %>
        build_sliders(slider_values);
      </script>

      <%= f.submit "Save", :class => 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
